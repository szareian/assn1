<p id="notice"><%= notice %></p>

<h1>Enrollments Page</h1>

<table>
  <thead>
    <tr>
      <th>Student Id</th>
      <th>Course Name</th>
      <th>Percentage Grade</th>
      <th>Letter Grade</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @enrolls.each do |enroll| %>
      <tr>
        <td><%= enroll.student_id %></td>
        <td><%= enroll.course_id %></td>
        <td><%= enroll.percentage %></td>
        <td><%= enroll.lettergrade %></td>
        <td id="link"><%= link_to 'Show', enroll %></td>
        <td id="link"><%= link_to 'Edit', edit_enroll_path(enroll) %></td>
        <td id="link"><%= link_to 'Delete', enroll, method: :delete, data: { confirm: 'Are you sure?' } %></td>
    <% end %>
  </tbody>
</table>

<br>

<p id="link"><%= link_to 'New Enroll', new_enroll_path %></p>

<p id="link", font-size:50><%= link_to "Show Student", "/students" %></p>
<p id="link", font-size:50><%= link_to "Back to Course Page", "/courses" %></p>
